.card
    .card-image
        img(src='/images/planets/#{planet.image}')
        span.card-title #{planet.name}
        .float-text
            .chip #{planet.class}
    .card-content
        if enableDesc
            each desc in planet.description
                p #{desc}
    .card-action.row
        p.col.m6 #{planet.diameter}
        p.col.m6 #{planet.gravity}