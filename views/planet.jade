.card
    .card-image
        img(src='/images/planets/#{planet.image}')
        if enableDesc
            span.card-title #{planet.name}
        else
            a(href='/#{index}').card-title #{planet.name}
        .float-text
            .chip #{planet.class}
    .card-content
        if enableDesc
            each desc in planet.description
                p #{desc}
    .card-action.row
        p.col.m6 Diametro: #{planet.diameter}km
